<% @posts.each do |post| %>
<table id="post-table">
	<tr>
		<td rowspan="3">
			<%= image_tag post.image.url(:medium) %>

			<td id="table-title"><%= post.title %>
			</td>
			<tr>
				<td id="table-body">	
					<%= truncate(post.body, :length => 225) %>
				</td>
			</tr>
			<tr>
				<td id="table-actions">
					Written by Anonymous author with <%= post.user.followers_twitter %> Twitter followers
				</td>
			</tr>
		</td>
	</tr>
</table>
<% end %>